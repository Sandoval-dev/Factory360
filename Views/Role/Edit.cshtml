@model RoleEditModel

@{
    ViewData["Title"] = "Edit Role";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fa-solid fa-user-shield me-2"></i>Update Role</h5>
                <a asp-action="Index" class="btn btn-light btn-sm" title="Back to List">
                    <i class="fa-solid fa-list"></i> Roles
                </a>
            </div>

            <div class="card-body">
                <form asp-controller="Role" asp-action="Edit" method="post" class="needs-validation" novalidate>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="RoleName" class="form-label fw-semibold">Role Name</label>
                        <input asp-for="RoleName" class="form-control" placeholder="Enter role name..." />
                        <span asp-validation-for="RoleName" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-success">
                            <i class="fa-solid fa-floppy-disk me-1"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
