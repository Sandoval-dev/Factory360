@using Factory360.Data
@model AttendanceRecord

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-danger text-white text-center rounded-top-4 py-3">
                    <h4 class="mb-0 fw-bold">
                        <i class="fa-solid fa-triangle-exclamation me-2"></i>
                        Delete Attendance Record
                    </h4>
                </div>
                <div class="card-body text-center py-4 px-4">

                    <p class="fs-5 fw-semibold text-danger mb-4">
                        Are you sure you want to delete <strong>@Model.User.FullName</strong>'s attendance record?
                    </p>

                    <div class="mb-3">
                        <span class="fw-semibold me-2">Total Hours:</span>
                        <!-- #region  VirgÃ¼lden sonraki iki basamaktan sonra alma-->
                        <span class="badge bg-dark px-3 py-2">@((Convert.ToDouble(Model.TotalHours)).ToString("F2"))</span>
                    </div>

                    <div class="mb-3">
                        <span class="fw-semibold me-2">Check-In:</span>
                        <span class="badge bg-secondary px-3 py-2">@Model.CheckIn.ToString("f")</span>
                    </div>

                    <div class="mb-3">
                        <span class="fw-semibold me-2">Check-Out:</span>
                        @if (Model.CheckOut.HasValue)
                        {
                            <span class="badge bg-secondary px-3 py-2">@Model.CheckOut.Value.ToString("f")</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark px-3 py-2">Still Working</span>
                        }
                    </div>

                    <form asp-controller="Info" asp-action="DeleteConfirm" method="post" class="mt-4">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-danger px-4 rounded-pill">
                                <i class="fa-solid fa-trash me-1"></i> Yes, Delete
                            </button>
                            <a asp-controller="Info" asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill">
                                <i class="fa-solid fa-ban me-1"></i> Cancel
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
